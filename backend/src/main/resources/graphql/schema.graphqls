type Habit {
    id: ID!
    name: String!
    description: String
    difficulty: Int!
}

input HabitInput{
    name: String!
    description: String
    difficulty: Int!
}

# Root
type Query {
    getHabit(id: ID!): Habit
    getHabits: [Habit]
}

type Mutation {
    createHabit(name: String!, description: String, difficulty: Int!): Habit
